@model IEnumerable<Kutuphane.WebUI.Models.EmanetDto>

@{
    ViewData["Title"] = "Index";
    Layout = "AdminLayout";
}
<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.EmanetTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TeslimTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SonTeslimTarih)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.KitapKopya)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Uye)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Personel)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.EmanetTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TeslimTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SonTeslimTarih)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.KitapKopya.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Uye.Adi)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Personel.Adi)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
