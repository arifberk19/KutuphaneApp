@model IEnumerable<Kutuphane.WebUI.Models.KitapKopyaDto>

@{
	ViewData["Title"] = "KitapList";
	Layout = "UserLayout";
}

<h1>KitapList</h1>

<table class="table">
	<thead>
		<tr>
			<th>
				@Html.DisplayNameFor(model => model.Kitap)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.KopyaNo)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.EnSonRezerveEdenUye)
			</th>
			<th>
				@Html.DisplayNameFor(model => model.RezerveBitisTarihi)
			</th>
			<th></th>
		</tr>
	</thead>
	<tbody>
		@if (Model?.Count() > 0)
		{
			@foreach (var item in Model)
			{
				<tr>
					<td>
						@Html.DisplayFor(modelItem => item.Kitap.Adi)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.KopyaNo)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.EnSonRezerveEdenUye.Adi)
					</td>
					<td>
						@Html.DisplayFor(modelItem => item.RezerveBitisTarihi)
					</td>
					<td>
						<a asp-action="Rezerve" asp-route-id="@item.ID">Rezerve Et</a>
					</td>
				</tr>
			}
		}
	</tbody>
</table>
